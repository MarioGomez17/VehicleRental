@model List<UserIdentificationType>;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geologica:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/SignIn.css">
    <title>Registrarse</title>
</head>
<body class="BodySignIn">
    <div class="ContentBodySignIn">
        <div class="DivNavBarSignIn">
            <nav class="NavBarSignIn">
                <div class="LinkLogoSignIn">
                    <a asp-controller="Home" asp-action="Index"><img class="ImageLogo" src="~/images/Logo.webp" alt="Logotipo" /></a>
                </div>
                <div class="DivLinkSignIn">
                    <a asp-controller="User" asp-action="LogIn" class="LinkSignIn">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-login-2 IconLinkSVG"
                             width="35" height="35" viewBox="0 0 24 24" stroke-width="1.5" stroke="#1f9102"
                             fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M9 8v-2a2 2 0 0 1 2 -2h7a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-7a2 2 0 0 1 -2 -2v-2" />
                            <path d="M3 12h13l-3 -3" />
                            <path d="M13 15l3 -3" />
                        </svg>
                        <span class="LinkTextSignIn">Iniciar Sesión</span>
                    </a>
                </div>
                <div class="DivLinkSignIn">
                    <a asp-controller="User" asp-action="UserInfo" class="LinkSignIn">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user IconLinkSVG"
                             width="35" height="35" viewBox="0 0 24 24" stroke-width="1.5" stroke="#020291"
                             fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" />
                            <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
                        </svg>
                        <span class="LinkTextSignIn">Ver Mi Perfil</span>
                    </a>
                </div>
                <div class="DivLinkSignIn">
                    <a asp-controller="Vehicle" asp-action="VehiclesInfo" class="LinkSignIn">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-car IconLinkSVG"
                             width="35" height="35" viewBox="0 0 24 24" stroke-width="1.5" stroke="#beac0d"
                             fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M7 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
                            <path d="M17 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
                            <path d="M5 17h-2v-6l2 -5h9l4 5h1a2 2 0 0 1 2 2v4h-2m-4 0h-6m-6 -6h15m-6 0v-5" />
                        </svg>
                        <span class="LinkTextSignIn">Ver Mis Vehiculos</span>
                    </a>
                </div>
                <div class="DivLinkSignIn">
                    <a asp-controller="Rental" asp-action="RentalHistory" class="LinkSignIn">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-history IconLinkSVG"
                             width="35" height="35" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000"
                             fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M12 8l0 4l2 2" />
                            <path d="M3.05 11a9 9 0 1 1 .5 4m-.5 5v-5h5" />
                        </svg>
                        <span class="LinkTextSignIn">Ver Mis Alquileres</span>
                    </a>
                </div>
                <div class="DivLinkSignIn">
                    <a asp-controller="User" asp-action="LogOut" class="LinkSignIn">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-login IconLinkSVG"
                             width="35" height="35" viewBox="0 0 24 24" stroke-width="1.5" stroke="#be0d0d"
                             fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M15 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2" />
                            <path d="M21 12h-13l3 -3" />
                            <path d="M11 15l-3 -3" />
                        </svg>
                        <span class="LinkTextSignIn">Cerrar Sesión</span>
                    </a>
                </div>
            </nav>
        </div>
        <div class="DivContentSignIn">
            <div class="DivHeaderSignIn">
                <header class="HeaderSignIn">
                    <h1 class="MainTitlelSignIn">Alquiler de Vehículos</h1>
                </header>
            </div>
            <div class="DivMainContentSignIn">
                <div class="DivMainSignIn">
                    <main role="main" class="MainSignIn">
                        <div class="ContentMainSignIn">
                            <div class="DivFormTitle">
                                <h2 class="FormTitle">Crear Cuenta</h2>
                            </div>
                            <div class="DivErrorViewBag">
                                @if (ViewBag.Message != null)
                                {
                                    <h3 class="ErroViewBag">@ViewBag.Message</h3>
                                }
                            </div>
                            <div class="DivFormSignIn">
                                <form asp-controller="User" asp-action="SignInAction" method="post" class="FormSigIn">
                                    <div class="DivForTwoComponents">
                                        <div class="Component">
                                            <input class="TextInput" type="text" placeholder="Nombre" name="Name_User" id="UserName" required />
                                            <label for="UserName" class="LabelForm">Nombre</label>
                                        </div>
                                        <div class="Component">
                                            <input class="TextInput" type="text" placeholder="Apellido" name="LastName_User" id="UserLastName" required />
                                            <label for="UserLastName" class="LabelForm">Apellido</label>
                                        </div>
                                    </div>
                                    <div class="DivForTwoComponents">
                                        <div class="Component">
                                            <select id="UserIdentificationType" name="UserIdentificationType_User" class="FormSelect">
                                                <option disabled selected class="FormSelectOption">Seleccione un Tipo de Identificación</option>
                                                @foreach (var IdentificationTypeUser in Model)
                                                {
                                                    <option value=@IdentificationTypeUser.Id_UserIdentificationType class="FormSelectOption">
                                                        @IdentificationTypeUser.Name_UserIdentificationType (@IdentificationTypeUser.Symbol_UserIdentificationType)
                                                    </option>
                                                }
                                            </select>
                                            <label for="UserIdentificationType" class="LabelForm">Tipo de Identificación</label>
                                        </div>
                                        <div class="Component">
                                            <input class="TextInput" type="number" placeholder="Número de Identificación" name="IdentificationNumber_User" id="UserIdentification" required />
                                            <label for="UserIdentification" class="LabelForm">Número de Identificación</label>
                                        </div>
                                    </div>
                                    <div class="DivForTwoComponents">
                                        <div class="Component">
                                            <input class="TextInput" type="number" placeholder="Teléfono" name="Phone_User" id="UserPhoneNumber" required />
                                            <label for="UserPhoneNumber" class="LabelForm">Teléfono</label>
                                        </div>
                                        <div class="Component">
                                            <input class="TextInput" type="email" placeholder="Correo" name="Email_User" id="UserEmail" required />
                                            <label for="UserEmail" class="LabelForm">Correo</label>
                                        </div>
                                    </div>
                                    <div class="DivForTwoComponents">
                                        <div class="Component">
                                            <input class="TextInput" type="password" placeholder="Contraseña" name="Password_User" id="Password_User" required />
                                            <label for="UserPassword" class="LabelForm">Contraseña</label>
                                        </div>
                                        <div class="Component">
                                            <input class="TextInput" type="password" placeholder="Confirmar Contraseña" name="Password_UserConfirm" id="Password_UserdConfirm" required />
                                            <label for="UserPasswordConfirm" class="LabelForm">Confirmar Contraseña</label>
                                        </div>
                                    </div>
                                    <div class="Component BtnIS">
                                        <input type="submit" value="Registrarme" class="RegisterButton" id="RegisterButton" disabled />
                                    </div>
                                </form>
                                <div class="Component DivLogIn">
                                    <p class="TextLogIn">¿Ya tienes cuenta? <a asp-controller="User" asp-action="LogIn" class="TextLinkLogIn">Inicia Sesion</a></p>
                                </div>
                            </div>
                        </div>
                    </main>
                </div>
            </div>
            <div class="DivFooterSignIn">
                <footer class="FooterSignIn">
                    <span class="TextFooterSignIn">
                        &copy; 2024 - Alquiler de Vehículos por Mario Gómez y Juan Diego Claros
                    </span>
                </footer>
            </div>
        </div>
    </div>
    <script src="~/js/SignIn.js"></script>
</body>
</html>